{
  "name": "vs-code-extensions",
  "displayName": "苏木的VSCode扩展demo",
  "description": "这是一个VSCode扩展的示例。",
  "keywords": ["vscode", "plugin", "demo"],
  "version": "0.0.1",
  "publisher": "sumu",
  "repository": {
	"type": "git",
	"url": "https://github.com/vscode-devs/vs-code-extensions.git"
  },
  "homepage": "https://github.com/vscode-devs/vs-code-extensions/blob/master/README.md",
  "icon": "images/extension.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
	"vs-code-extensions.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-code-extensions.helloWorld",
        "title": "Hello World"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vs-code-extensions.helloWorld",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vs-code-extensions.helloWorld",
        "key": "ctrl+alt+f10",
        "mac": "cmd+alt+f10",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
